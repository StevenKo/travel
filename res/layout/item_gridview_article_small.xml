<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:background="@drawable/my_city_selector"
    >
 
   <LinearLayout 
      android:layout_width="wrap_content"
	  android:layout_height="165dp"
	  android:gravity="center"
	  android:orientation="vertical"
       >
	    <ImageView
	        android:id="@+id/grid_item_image"
	        android:layout_width="120dp"
	        android:layout_height="80dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginBottom="2dp"
	        android:layout_marginTop="5dp"
	        android:src="@drawable/ic_launcher" >
	    </ImageView>
	 
	    <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	        android:gravity="center_vertical"
	        >
		    <TextView
		        android:id="@+id/grid_item_title"
		        android:layout_width="wrap_content"
		        android:layout_height="38dp"
		        android:text="天龍八部天龍八部天龍八部天龍八部天龍八部天龍八部天龍八部天龍八部"
	            android:layout_marginBottom="2dp"
		        android:textSize="16dp" 
	            android:textStyle="bold"
	            android:typeface="serif"
	            android:maxLines="2"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            />
		   
	        <RelativeLayout android:layout_width="wrap_content"
		        android:layout_height="17dp"
		        android:orientation="horizontal"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="7dp"
	        >
	            <TextView
	              android:id="@+id/author_tip"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="作者:"
	           	  android:textSize="13dp" 
	              android:textColor="#999999"
	              android:typeface="serif"
	              >
	            </TextView>
	            <RelativeLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" 
	                android:layout_toRightOf="@+id/author_tip">
	            <TextView
		            android:id="@+id/grid_item_author"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"		            
		            android:text="金庸"
		            android:textSize="13dp" 
		            android:textColor="#555555"
		            android:typeface="serif"
		            android:maxLines="1"
	            >
	            </TextView>
	            </RelativeLayout>
	        </RelativeLayout>
		           
	        <RelativeLayout android:layout_width="wrap_content"
		        android:layout_height="17dp"
		        android:orientation="horizontal"		        
		        android:layout_marginBottom="5dp"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="7dp"
		        android:layout_marginTop="2dp"
	        >
	            <TextView
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="日期:"
	              android:textSize="13dp" 
	              android:textColor="#999999"
	              android:typeface="serif"
	              >
	            </TextView>
			    <TextView
			        android:id="@+id/grid_item_date"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="13-02-13"
			        android:layout_alignParentRight="true"
			        android:textSize="13dp" 
		            android:textColor="#555555"
		            android:typeface="serif"
		            android:maxLines="1"
		            >
		    </TextView>
	        </RelativeLayout>
	        
	    </LinearLayout>
    
    </LinearLayout>
 
</LinearLayout>