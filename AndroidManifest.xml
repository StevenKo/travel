<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travel.story"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light"
         >
        <activity
            android:name="com.travel.story.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".SecondCategoryActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".LastCategoryActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".ArticleActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".SiteActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".SearchActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".CollectionActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".CitysCategoryActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".AreaIntroActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".AreaIntroContentActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        <activity
            android:name=".TabSearchActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            >
        </activity>
        
        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
        
		<activity android:name="com.vpon.adon.android.WebInApp"
		 android:screenOrientation="portrait"
		 android:configChanges="orientation|keyboardHidden|navigation|keyboard"
		 
		/>
		<activity android:name="com.vpon.adon.android.CrazyAdRun"
		 android:configChanges="orientation|keyboardHidden|navigation|keyboard"
		 android:theme="@android:style/Theme.Translucent" />          
		<activity android:name="com.vpon.adon.android.webClientHandler.QRActivity"
		 android:finishOnTaskLaunch = "true"
		 android:clearTaskOnLaunch = "true"
		 android:configChanges="keyboardHidden|navigation|keyboard"
		>
		</activity>
		<activity android:name="com.vpon.adon.android.webClientHandler.ShootActivity"
		 android:finishOnTaskLaunch = "true"
		 android:clearTaskOnLaunch = "true"
		 android:configChanges="keyboardHidden|navigation|keyboard">
		</activity>
		<activity android:name="com.googleing.zxinging.client.android.CaptureActivity"
		 android:finishOnTaskLaunch = "true"
		 android:clearTaskOnLaunch = "true"
		 android:configChanges="orientation|keyboardHidden"
		 android:screenOrientation="landscape"
		 android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
		 android:windowSoftInputMode="stateAlwaysHidden">
		        <intent-filter>
		          <action android:name="com.googleing.zxinging.client.android.SCAN"/>
		       	  <category android:name="android.intent.category.DEFAULT"/>
		        </intent-filter>
		</activity>
        
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />    
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    
</manifest>